{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for Renovate in all @davidsneighbour projects",
  "timezone": "Asia/Bangkok",
  "schedule": [
    "* 21-23,0-4 * * 5,6"
  ],
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/_vendor/**",
    "**/scratch/**"
  ],
  "onboarding": false,
  "packageRules": [
    {
      "automerge": true,
      "matchPackageNames": [
        "/@types/*/"
      ]
    },
    {
      "automerge": true,
      "automergeSchedule": [
        "at any time"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "groupName": "davidsneighbour",
      "ignoreTests": true,
      "matchPackageNames": [
        "/@davidsneighbour/*/"
      ]
    },
    {
      "automerge": true,
      "matchPackageNames": [
        "/lint/",
        "/prettier/",
        "/caniuse-lite/"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "/eslint/"
      ]
    },
    {
      "groupName": "remark",
      "matchPackageNames": [
        "/remark/"
      ]
    }
  ],
  "additionalBranchPrefix": "{{parentDir}}/",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
