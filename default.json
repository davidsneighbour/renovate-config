{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for Renovate in all @davidsneighbour projects",
  "timezone": "Asia/Bangkok",
  "schedule": [
    "* 21-23,0-4 * * 5,6"
  ],
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/_vendor/**",
    "**/scratch/**"
  ],
  "onboarding": false,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "@types/*"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "@davidsneighbour/*"
      ],
      "automerge": true,
      "automergeSchedule": [
        "at any time"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "groupName": "davidsneighbour",
      "ignoreTests": true
    },
    {
      "matchPackagePatterns": [
        "lint",
        "prettier",
        "caniuse-lite"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": [
        "remark"
      ],
      "groupName": "remark"
    }
  ],
  "additionalBranchPrefix": "{{parentDir}}/",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
